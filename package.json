{
  "name": "iconfinder",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/hofens/iconfinder.git"
  },
  "bugs": {
    "url": "https://github.com/hofens/iconfinder/issues"
  },
  "dependencies": {
    "cra-template": "1.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "5.4.0",
    "react-scripts": "5.0.1",
    "sharp": "0.33.5"
  },
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "cross-env BROWSER=none react-scripts start",
    "start:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "react-scripts build",
    "build:electron": "npm run build && electron-builder -mw",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.hofens.iconfinder",
    "productName": "Icon Finder",
    "copyright": "Copyright Â© 2024 hofens",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/logo512.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/logo512.png"
    },
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js",
      "public/logo512.png"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "asar": true,
    "extraResources": [
      {
        "from": "build",
        "to": "app/build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "25.9.8",
    "electron-builder": "24.6.0",
    "wait-on": "^7.0.1"
  }
}
